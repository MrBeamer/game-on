
<h1 class="text-center headline-index">Discover a New Universe of Gaming</h1>
<div class="index-box">

<div class="cards">
  <% @games.each do |game| %>
    <% if game.photo.attached? %>
      <% background_url = cl_image_path game.photo.key, width: 500, height: 600, crop: :fill %>
    <% else %>
      <% background_url = 'https://i.redd.it/d5g2jaawgw431.jpg'%>
    <% end %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
      <h1 class="game-title"> <%= link_to game.title, game_path(game) %> </h1>
    </div>
  <% end  %>
</div>

</div>



