
  <h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<%= simple_form_for(@game) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :condition, collection: Game::STATUS %>
  <%= f.input :category %>
  <%= f.submit "Submit Game", class: "btn btn-primary" %>
<% end %>

