<div class="form">
   <h1>Create a new Game</h1>

<%= simple_form_for(@game) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :condition, collection: Game::STATUS %>
  <%= f.input :category %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit Game", class: "btn btn-primary" %>
<% end %>

</div>


